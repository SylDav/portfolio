---
const { 
  company, 
  position, 
  duration, 
  location, 
  description, 
  achievements = [], 
  technologies = [],
  type = "CDI" // CDI, Freelance, Bénévolat
} = Astro.props;
---
<article class="card hover:shadow-2xl transition-all duration-300 border-l-4" style={`border-color: ${type === 'Freelance' ? '#10B981' : type === 'Bénévolat' ? '#8B5CF6' : 'var(--accent)'}`}>
  <!-- Header -->
  <header class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
    <div>
      <div class="flex items-center gap-3 mb-2">
        <h3 class="text-xl font-semibold text-text-main">{position}</h3>
        <span class="px-2 py-1 text-xs font-medium rounded-full" 
          class:bg-accent/20={type === 'CDI'}
          class:bg-green-500/20={type === 'Freelance'}
          class:bg-purple-500/20={type === 'Bénévolat'}
          class:text-accent={type === 'CDI'}
          class:text-green-400={type === 'Freelance'}
          class:text-purple-400={type === 'Bénévolat'}
        >
          {type}
        </span>
      </div>
      <div class="text-accent font-medium text-lg">{company}</div>
      <div class="text-muted text-sm flex items-center gap-4 mt-1">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          {duration}
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          {location}
        </span>
      </div>
    </div>
  </header>

  <!-- Description -->
  <div class="mb-4">
    <p class="text-muted leading-relaxed">{description}</p>
  </div>

  <!-- Achievements -->
  {achievements.length > 0 && (
    <div class="mb-4">
      <h4 class="font-medium text-text-main mb-2">Réalisations principales</h4>
      <ul class="space-y-2">
        {achievements.map((achievement: string) => (
          <li class="flex items-start gap-2 text-muted text-sm">
            <svg class="w-4 h-4 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>{achievement}</span>
          </li>
        ))}
      </ul>
    </div>
  )}

  <!-- Technologies -->
  {technologies.length > 0 && (
    <footer>
      <h4 class="font-medium text-text-main mb-2">Technologies utilisées</h4>
      <div class="flex flex-wrap gap-2">
        {technologies.map((tech: string) => (
          <span class="px-3 py-1 bg-card border border-border rounded-full text-sm font-medium hover:border-accent/50 transition-colors">
            {tech}
          </span>
        ))}
      </div>
    </footer>
  )}
</article>
