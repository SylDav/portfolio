---
import ExperienceCard from "./ExperienceCard.astro";
import SectionTitle from "./SectionTitle.astro";

const experiences = [
  {
    company: "Groupe Immobiliier Pro",
    position: "Développeur Web Senior",
    duration: "2022 - 2024",
    location: "Paris, France",
    type: "CDI",
    description: "Développement CRM pour 200+ agences immobilières avec architecture microservices et optimisation des performances.",
    achievements: [
      "CRM de A à Z avec 60% de performance en plus",
      "Architecture microservices Docker",
      "Formation équipe et réduction 75% des bugs critiques"
    ],
    technologies: ["PHP", "Laravel", "Vue.js", "Docker", "MySQL"]
  },
  {
    company: "Startup Tech Innov",
    position: "Développeur Full-Stack",
    duration: "2020 - 2022", 
    location: "Lyon, France",
    type: "CDI",
    description: "Plateforme SaaS gestion événements sportifs en équipe agile. API REST et migration architecture modulaire.",
    achievements: [
      "Système tournois temps réel",
      "API REST pour 10+ partenaires",
      "Migration monolith vers modules"
    ],
    technologies: ["PHP", "Symfony", "React", "PostgreSQL", "WebSocket"]
  },
  {
    company: "Freelance & Bénévolat",
    position: "Développeur Web",
    duration: "2018 - 2020",
    location: "Remote, France",
    type: "Freelance",
    description: "Sites web sur mesure pour PME, associations et club sportif. Focus WordPress, SEO et performance.",
    achievements: [
      "15+ sites WordPress optimisés SEO",
      "Référencement +40% en moyenne",
      "Formation clients et maintenance continue"
    ],
    technologies: ["WordPress", "PHP", "SEO", "JavaScript"]
  }
];
---
<section id="experience" class="py-20">
  <div class="text-center mb-12">
    <SectionTitle
      title="Mon Parcours"
      subtitle="Une expérience riche et variée du développement web"
    />
  </div>

  <!-- Timeline compacte -->
  <div class="max-w-4xl mx-auto">
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 h-full w-0.5 bg-border"></div>
      
      <!-- Experience cards -->
      <div class="space-y-8">
        {experiences.map((experience, index) => (
          <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
            <!-- Timeline dot -->
            <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 bg-accent rounded-full border-4 border-bg-main z-10"></div>
            
            <!-- Card -->
            <div class={`ml-16 md:ml-0 ${index % 2 === 0 ? 'md:mr-auto md:pr-8' : 'md:ml-auto md:pl-8'} md:w-5/12`}>
              <ExperienceCard {...experience} />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  
  <!-- CTA simplifié -->
  <div class="text-center mt-12">
    <a href="#contact" class="btn-primary inline-flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      Discutons de votre projet
    </a>
  </div>
</section>