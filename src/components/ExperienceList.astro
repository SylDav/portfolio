---
import ExperienceCard from "./ExperienceCard.astro";
import SectionTitle from "./SectionTitle.astro";

const experiences = [
  {
    company: "Global Courtage",
    position: "Développeur Web full-stack",
    duration: "2022 - 2025",
    location: "Nancy, France",
    type: "CDI",
    description: "Développement et maintenance de plateforme CRM pour courtiers immobiliers. Architecture microservices et optimisation des performances.",
    achievements: [
      "Architecture et développement API REST complète de l'application",
      "Module de facturation avec génération PDF",
      "Connexions API externes : Assurea (assurances) et YouSign (signature électronique)",
      "Tests E2E automatisés avec Laravel Dusk (couverture complète)",
      "Développement module collaboratif avec équipe Vue.js et graphiques dynamiques"
    ],
    technologies: ["PHP", "Laravel", "Vue.js", "Docker", "MySQL", "API REST"]
  },
  {
    company: "Adjustem, Nil0bstat, Peri-G (missions CDD successives)",
    position: "Développeur PHP/Symfony",
    duration: "2018 - 2022", 
    location: "Amiens, France",
    type: "CDD",
    description: "Développement d'applications backend spécialisées pour différents secteurs (menuiserie, logistique, services). Architecture modulaire et intégration d'API partenaires.",
    achievements: [
      "Applications backend avec Symfony et CodeIgniter",
      "Intégration API partenaires (Butagaz, LaPoste, etc.)",
      "Développement configurateurs produits et services",
      "Modules de calculs fiscaux et tarification",
      "Migration legacy vers architectures modernes"
    ],
    technologies: ["PHP", "Symfony", "CodeIgniter", "API REST", "MySQL", "Intégration API"]
  },
  {
    company: "Freelance & Bénévolat",
    position: "Développeur Web",
    duration: "2018 & 2022",
    location: "Remote, France",
    type: "Freelance",
    description: "Développement sites web pour PME et associations. Focus WordPress, SEO et performance. Gestion complète de A à Z des projets.",
    achievements: [
      "Site web ensemble scolaire Notre-Dame (freelance)",
      "Blog club badminton FDV (bénévolat)",
      "Sites WordPress optimisés SEO",
      "Formation clients et maintenance continue"
    ],
    technologies: ["WordPress", "PHP", "SEO", "JavaScript", "MySQL"]
  }
];
---
<section id="experience" class="py-20 bg-card/50">
  <div class="text-center mb-16">
    <SectionTitle
      title="Parcours Professionnel"
      subtitle="5 ans d'expérience en développement web avec focus sur la qualité et l'innovation"
    />
    
    <!-- Expertise highlights -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-2xl font-bold text-accent mb-1">5</div>
        <div class="text-muted text-sm">Ans d'expérience</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-accent mb-1">200+</div>
        <div class="text-muted text-sm">Courtiers immobiliers</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-accent mb-1">5+</div>
        <div class="text-muted text-sm">API intégrées</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-accent mb-1">100%</div>
        <div class="text-muted text-sm">Tests E2E</div>
      </div>
    </div>
  </div>

  <!-- Timeline -->
  <div class="max-w-4xl mx-auto">
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 h-full w-0.5 bg-border"></div>
      
      <!-- Experience cards -->
      <div class="space-y-8">
        {experiences.map((experience, index) => (
          <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
            <!-- Timeline dot -->
            <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 bg-accent rounded-full border-4 border-bg-main z-10"></div>
            
            <!-- Card -->
            <div class={`ml-16 md:ml-0 ${index % 2 === 0 ? 'md:mr-auto md:pr-8' : 'md:ml-auto md:pl-8'} md:w-5/12`}>
              <ExperienceCard {...experience} />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  
  <!-- CTA fort pour CDI -->
  <div class="text-center mt-16">
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent/10 border border-accent/30 rounded-full">
      <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <span class="text-accent font-medium">Ouvert aux opportunités CDI</span>
    </div>
  </div>
</section>